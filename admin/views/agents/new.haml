.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:agents, :index)
      %li.active=link_to pat(:new), url(:agents, :new)
  .content
    %h2.title
      =pat(:new)
      =mt(:agent)
    .inner
      -form_for :agent, url(:agents, :create), :class => :form do |f|
        =partial "agents/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
