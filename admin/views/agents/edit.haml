.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:agents, :index)
      %li=link_to pat(:new), url(:agents, :new)
      %li.active=link_to pat(:edit), url(:agents, :edit, :id => @agent.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:agent)
    .inner
      -form_for :agent, url(:agents, :update, :id => @agent.id), :method => :put, :class => :form do |f|
        =partial "agents/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
