.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:amenities, :index)
      %li=link_to pat(:new), url(:amenities, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:amenities)
    .inner
      %table.table
        %tr
          %th.first=mat(:amenity, :id)
          %th=mat(:amenity, :amenity_name)
          %th=mat(:amenity, :created_at)
          %th=mat(:amenity, :updated_at)
          %th.last="&nbsp;"
        -@amenities.each do |amenity|
          %tr
            %td.first=amenity.id
            %td=amenity.amenity_name
            %td=amenity.created_at
            %td=amenity.updated_at
            %td.last
              =button_to pat(:edit), url(:amenities, :edit, :id => amenity.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:amenities, :destroy, :id => amenity.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")
