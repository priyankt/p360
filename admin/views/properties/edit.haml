.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:properties, :index)
      %li=link_to pat(:new), url(:properties, :new)
      %li.active=link_to pat(:edit), url(:properties, :edit, :id => @property.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:property)
    .inner
      -form_for :property, url(:properties, :update, :id => @property.id), :method => :put, :class => :form do |f|
        =partial "properties/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
